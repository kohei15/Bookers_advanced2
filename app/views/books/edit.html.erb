<p id="notice"><%= @alert %></p>
<div class="col-md-6 col-md-offset-3">
	<h1>Editing Book</h1>
	<%= form_for(@book) do |f| %>
		<div class="field row">
			<label for="book_title">Title</label><br>
			<%= f.text_field :title,class: "col-xs-12 book_title" %>
		</div>
		<div class="field row"><br>
			<label for="book_body">Opinion</label><br>
			<%= f.text_area :body,class: "col-xs-12 book_body}" %>
		</div>
		<%= f.submit 'Update Book',class: "btn btn-primary col-xs-12" %>
	<% end %>
	<%= link_to "Show", book_path(@book.id),class: "book_#{@book.id}" %> | <%= link_to "Back", books_path,class: "back" %>
</div>