<!-- 「_userinfo.html.erb」の呼び出し -->
<div class="col-xs-3">
<%= render 'layouts/userinfo', user: @user %>
<%= render 'layouts/newbook', book: @book %>
</div>
<div class="col-xs-9">
	<h2>Book detail(/books/id)</h2>
	<table class="table">
		<tbody>
			<tr>
				<td>
					<%= link_to user_path(current_user.id) ,class: "user_#{@user.id}" do  %>
					<%= attachment_image_tag @user, :image, format: 'jpeg', fallback: "no_image.jpg", size: "40x40" %>
					<% end %>
				</td>
				<td><%= @book.title %></td>
				<td><%= @book.body %></td>
				<td><%= link_to 'Edit', edit_book_path(@book.id), class: "btn-sm btn-success edit_#{@book.id}" %></td>
				<td><%= link_to "Destroy", book_path(@book.id),class: "btn-sm btn-danger destroy_#{@book.id}", method: :delete, "data-confirm" => "本当に消しますか？" %></td>
			</tr>
		</tbody>
	</table>
</div>