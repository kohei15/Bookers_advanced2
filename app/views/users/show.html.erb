<!-- 「_userinfo.html.erb」の呼び出し -->
<div class="col-xs-3">
<%= render 'layouts/userinfo', user: @user %>
<%= render 'layouts/newbook', book: @book %>
</div>
<div class="col-xs-9">
	<h2>Books（マイページ）</h2>
	<table class="table table-hover table-inverse">
		<tr>
			<th></th>
			<th>Title</th>
			<th>Opinion</th>
		</tr>
		<% @books.each do |book| %>
		<tr>
			<td>
				<%= link_to user_path(current_user.id) ,class: "user_#{@user.id}" do  %>
				<%= attachment_image_tag book.user, :image, :fill, 50, 50, format: 'jpeg' %>
				<% end %>
			</td>
			<!-- user_path(current_user.id) -->
			<td><%= link_to book.title, book_path(book.id),class: "book_#{book.id}" %></td>
			<td><%= book.body %></td>
		</tr>
		<% end %>
	</table>
</div>